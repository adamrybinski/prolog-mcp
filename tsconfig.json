{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ]
}
